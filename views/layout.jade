doctype html
html
  head
    meta(name='viewport',content='width=device-width,initial-scale=1,maximum-scale=1')
    style.
      @font-face {
        font-family: 'Existence';
        src: url('/fonts/existence/font.woff') format('woff'),
             url('/fonts/existence/font.ttf') format('truetype'),
             url('/fonts/existence/font#ExistenceLight') format('svg');
        font-weight: normal;
        font-style: normal;
      }

    link(rel='alternate',type='application/rss+xml',href='https://blog.indutny.com/rss.xml',title=title)
    link(rel='stylesheet',href='/css/normalize.css')
    link(rel='stylesheet',href='/css/main.css')
    link(rel='stylesheet',href='/css/highlight.css')

    link(rel='icon',type='image/png',href='/images/favicon.png')
    title= title
  body
    nav
      header
        if title
          h1= title
        else
          h1 Engineering
          h1 Compilers
          h1 Bears
      footer
        span Copyright 
        a(href="https://github.com/indutny") Fedor Indutny
        br
        span view 
        a(href='http://opensource.org/licenses/mit-license.php') license
    section#content
      block content
    div.clear

